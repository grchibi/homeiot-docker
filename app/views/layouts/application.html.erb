<!DOCTYPE html>
<html>
  <head>
    <title>My Home IoT</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_pack_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <header>
      <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <a href="/" class="navbar-brand"><%= t('views.layouts.application.nav_title') %></a>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li><a href="/">Home</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to t('views.layouts.application.logout'), destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>
        </div>
      </div>
    </header>
    
    <div class="container">
      
      <div class="page-header">
        
        <!--div class="row">
          <div class="col-lg-12"-->
            <!--% if user_signed_in? %>
              <!--%= render 'shared/header_menu' %>
            <!--% end %>
          </div>
        </div-->
    
      </div> <!-- page-header -->
    
      <div class="bs-docs-section">
        <div class="row">
          <div class="col-lg-12">
            
            <% if flash[:notice].present? %>
              <div class="notice alert-dismissible alert-info"><%= notice %></div>
            <% end %>
            <% if flash[:alert].present? %>
              <div class="alert alert-dismissible alert-danger"><%= alert %></div>
            <% end %>
            
          </div>  <!-- col-lg-12 -->
        </div>  <!-- row -->
        
        <div class = "row">
          <%= yield %>
        </div>
      </div>  <!-- bs-docs-section -->
            
    </div>
    
  </body>
</html>
